<Page
    x:Class="Aplikacja_Projekt.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aplikacja_Projekt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="LightSteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Imię:"
                   Grid.Row="1"
                   Grid.Column="1"
                   FontSize="36"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20,20,100,20"/>
        <TextBox x:ConnectionId='1' Name="ImieTextBox" 
                 Grid.Column="2"
                 Grid.Row="1"
                 FontSize="36"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="20"
                 Width="500">
        </TextBox>

        <TextBlock Text="Nazwisko:"
                   Grid.Row="2"
                   Grid.Column="1"
                   FontSize="36"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20,20,100,20"/>
        <TextBox x:ConnectionId='2' Name="NazwiskoTextBox" 
                 Grid.Column="2"
                 Grid.Row="2"
                 FontSize="36"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="20"
                 Width="500">
        </TextBox>

        <TextBlock Text="Login:"
                   Grid.Row="3"
                   Grid.Column="1"
                   FontSize="36"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20,20,100,20"/>
        <TextBox x:ConnectionId='3' Name="LoginTBox" 
                 Grid.Column="2"
                 Grid.Row="3"
                 FontSize="36"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="20"
                 Width="500">
        </TextBox>

        <TextBlock Text="Hasło:"
                   Grid.Row="4"
                   Grid.Column="1"
                   FontSize="36"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20,20,100,20"/>
        <TextBox x:ConnectionId='4' Name="HasloTextBox" 
                 Grid.Column="2"
                 Grid.Row="4"
                 FontSize="36"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="20"
                 Width="500">
        </TextBox>

        <TextBlock Text="E-mail:"
                   Grid.Row="5"
                   Grid.Column="1"
                   FontSize="36"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20,20,100,20"/>
        <TextBox x:ConnectionId='5' Name="EmailTextBox" Grid.Column="2"
                 Grid.Row="5"
                 FontSize="36"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="20"
                 Width="500">
        </TextBox>

        <Button x:ConnectionId='6' Name="RegisterButton"
                                                
                    Grid.Row="6"
                    Grid.Column="2"
                    Content="Zarejestruj"
                    FontSize="36"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="20"/>
        
        <Button x:ConnectionId='7' Name="BackButton"
                                            
                    Grid.Row="6"
                    Grid.Column="1"
                    Content="Cofnij"
                    FontSize="36"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="20,20,100,20"/>
        
        <Popup x:ConnectionId='8' Grid.Row="3"
               Grid.Column="3"
               Name="PopupLogin" Margin="0,30,0,0">
            <TextBlock TextWrapping="Wrap"
                       FontSize="25"
                       Text="Login za krótki (min 6)!"                       
                       Foreground="DarkRed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Popup>

        <Popup x:ConnectionId='9' Grid.Row="4"
               Grid.Column="3"
               Name="PopupHaslo" Margin="0,30,0,0">
            <TextBlock TextWrapping="Wrap"
                       FontSize="25"
                       Text="Hasło za krótkie (min 6)!"                       
                       Foreground="DarkRed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Popup>

        <Popup x:ConnectionId='10' Grid.Row="5"
               Grid.Column="3"
               Name="PopupEmail" Margin="0,30,0,0">
            <TextBlock TextWrapping="Wrap"
                       FontSize="25"
                       Text="E-mail błędny!"                       
                       Foreground="DarkRed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Popup>
    </Grid>
</Page>

